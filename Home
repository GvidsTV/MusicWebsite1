  <script>
	// JavaScript for slider functionality
	const slides = document.querySelector('.slides');
	let slideIndex = 0;

	function showSlides() {
  	slideIndex++;
  	if (slideIndex >= 3) {
    	slideIndex = 0;
  	}
  	slides.style.transform = `translateX(${-slideIndex * 100}%)`;
  	setTimeout(showSlides, 3000); // Change slide every 3 seconds
	}

	showSlides();
  </script>

